{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2017",
    "sourceMap": true,
    "declaration": true,
    "outDir": "lib",
    "moduleResolution": "node",
    "removeComments": false,
    "strict": true,
    "noImplicitAny": false,
    "importHelpers": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
