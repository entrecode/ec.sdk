{
  "name": "ec.sdk",
  "version": "0.0.1",
  "description": "SDK for ec.api",
  "main": "./lib/index.js",
  "module": "./src/index.js",
  "jsnext:main": "./src/index.js",
  "repository": "entrecode/ec.sdk.git",
  "scripts": {
    "test": "npm run build && mocha --recursive",
    "testTravis": "npm run browserify && mocha --resurcive",
    "coveralls": "istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -- -R spec && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "coverage": "istanbul cover ./node_modules/mocha/bin/_mocha -- -R spec",
    "build": "babel src -d lib --source-maps",
    "browserify": "npm run build && browserify lib/index.js -o dist/ec.sdk.js -t [ babelify --presets [ es2015 ] ] && uglifyjs dist/ec.sdk.js --screw-ie8 --compress --mangle  -o dist/ec.sdk.min.js",
    "watch": "babel src -d lib --source-maps --watch"
  },
  "author": "Simon Scherzinger <scherzinger@entrecode.de>",
  "license": "ISC",
  "dependencies": {
    "halfred": "^1.0.0",
    "traverson": "^5.0.0",
    "traverson-hal": "^5.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.18.0",
    "babel-preset-es2015": "^6.18.0",
    "babelify": "^7.3.0",
    "browserify": "^13.3.0",
    "chai": "^3.5.0",
    "coveralls": "^2.11.15",
    "istanbul": "^0.4.5",
    "mocha": "^3.2.0",
    "mocha-bamboo-reporter": "^1.1.1",
    "sinon": "^1.17.7",
    "sinon-chai": "^2.8.0",
    "uglify-js": "^2.7.5"
  }
}
