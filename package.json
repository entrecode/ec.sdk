{
  "name": "ec.sdk",
  "version": "0.0.1",
  "description": "SDK for ec.api",
  "repository": "entrecode/ec.sdk",
  "author": "Simon Scherzinger <scherzinger@entrecode.de>",
  "license": "ISC",
  "main": "./lib/index.js",
  "module": "./src/index.js",
  "jsnext:main": "./src/index.js",
  "scripts": {
    "build": "npm run buildNode && npm run buildBrowser",
    "buildNode": "babel src -d lib --source-maps",
    "buildBrowser": "browserify lib/index.js -o dist/ec.sdk.js -t [ babelify --presets [ es2015 ] ] && uglifyjs dist/ec.sdk.js --screw-ie8 --compress --mangle  -o dist/ec.sdk.min.js",
    "changelog": "changelog entrecode/ec.sdk all -m > CHANGELOG.md",
    "coveralls": "istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -- -R spec && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "coverage": "istanbul cover ./node_modules/mocha/bin/_mocha -- -R spec && open ./coverage/lcov-report/index.html",
    "docs": "documentation build src/** -f html -o docs && documentation build src/** -f md -o DOCUMENTATION.md",
    "test": "npm run buildNode && mocha --recursive",
    "testTravis": "npm run build && mocha --recursive"
  },
  "dependencies": {
    "halfred": "^1.0.0",
    "traverson": "^5.0.0",
    "traverson-hal": "^5.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.18.0",
    "babel-preset-es2015": "^6.18.0",
    "babelify": "^7.3.0",
    "browserify": "^13.3.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "changelog": "^1.0.7",
    "coveralls": "^2.11.15",
    "documentation": "^4.0.0-beta.18",
    "istanbul": "^0.4.5",
    "mocha": "^3.2.0",
    "mocha-bamboo-reporter": "^1.1.1",
    "nock": "^9.0.2",
    "sinon": "^1.17.7",
    "sinon-chai": "^2.8.0",
    "uglify-js": "^2.7.5"
  }
}
